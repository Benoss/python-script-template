{% if project_type == "django" %}
services:
  db:
    image: docker.io/library/postgres:16-alpine
    container_name: {{ project_slug_underscore }}_db
    environment:
      POSTGRES_DB: {{ project_slug_underscore }}_db
      POSTGRES_USER: {{ project_slug_underscore }}_user
      POSTGRES_PASSWORD: {{ project_slug_underscore }}_password
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ project_slug_underscore }}_user -d {{ project_slug_underscore }}_db"]
      interval: 10s
      timeout: 5s
      retries: 5

volumes:
  postgres_data:
{% endif %}
