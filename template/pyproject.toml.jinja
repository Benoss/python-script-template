[project]
name = "{{ project_slug_dashes }}"
version = "0.1.0"
description = "{{ project_name }}"
readme = "README.md"
requires-python = ">=3.14"
dependencies = [
{% if project_type == "script" %}
    "loguru",
    "python-dotenv",
{% elif project_type == "django" %}
    "django>=6.0",
    "psycopg[binary]",
    "django-cotton",
    "django-environ",
    "gunicorn",
    "loguru",
{% endif %}
]

[project.optional-dependencies]
dev = [
    "pytest",
    "pytest-cov",
    "pytest-xdist",
    "ruff",
    "ty",
{% if project_type == "django" %}
    "pytest-django",
    "factory-boy",
    "django-stubs>=5.2.9",
{% endif %}

[tool.django-stubs]
django_settings_module = "django_starter.settings.local"
]


[tool.ruff]
# Exclude a variety of commonly ignored directories.
exclude = [
    ".bzr",
    ".direnv",
    ".eggs",
    ".git",
    ".git-rewrite",
    ".hg",
    ".mypy_cache",
    ".nox",
    ".pants.d",
    ".pytype",
    ".ruff_cache",
    ".svn",
    ".tox",
    ".venv",
    "__pypackages__",
    "_build",
    "buck-out",
    "build",
    "dist",
    "node_modules",
    "venv",
]

# Same as Black.
line-length = 120
indent-width = 4

# Assume Python 3.14
target-version = "py314"

extend-include = ["*.ipynb"]


# --------------------------------------------------------------------------------------------------
[tool.ruff.lint]
select = ["ALL"]

ignore = [
    # only relevant if you run a script with `python -0`,
    # which seems unlikely for any of the scripts in this repo
    "B011",
    # Leave it to the formatter to split long lines and
    # the judgement of all of us.
    "E501",
    "D100",  # Missing docstring in public module
    "D211",  # Multi-line docstring summary should start at the second line
    "D213",  # multi-line-summary-second-line
    "COM812", # Use `from module import *` instead of `import module`
    "D203",  # 1 blank line required before class docstring
    "D104", # Missing docstring in public package
    "TRY003", # Checks for long exception messages that are not defined in the exception class itself.
    "EM101", # Checks for the use of string literals in exception constructors.
{% if project_type == "script" %}
    # Script-specific exclusions
    "INP001",  # Implicit namespace package - tests/ directory intentionally not a package
{% endif %}
{% if project_type == "django" %}
    # Django-specific exclusions
    "ANN401",  # Dynamically typed expressions (Any) - Required for Django interfaces
    "INP001",  # Implicit namespace package - tests/ directory intentionally not a package
    "PLC0415",  # Import should be at top-level - Django manage.py pattern
    "EXE001",  # Shebang is present but file is not executable - Will be made executable in deployment
{% endif %}
]

[tool.ruff.lint.per-file-ignores]
# Test files use pytest patterns
"tests/*" = [
    "S101",     # Use of assert detected - pytest standard
    "PLR2004",  # Magic value used in comparison - HTTP status codes/test values are standard
{% if project_type == "script" %}
    "TC003",    # Move import into type-checking block - Runtime imports needed for fixtures
    "ARG001",   # Unused function argument - Fixtures require specific signatures
    "PLC0415",  # Import should be at top-level - Test-specific imports are fine
{% endif %}
{% if project_type == "django" %}
    "TC002",    # Move import into type-checking block - Runtime imports needed for fixtures
    "TC003",    # Move import into type-checking block - Runtime imports needed for fixtures
    "ARG001",   # Unused function argument - Fixtures require specific signatures
{% endif %}
]
{% if project_type == "django" %}
# Django app tests.py files also use pytest patterns
"*/apps/*/tests.py" = ["S101", "PLR2004", "PGH003"]
# Django admin files use standard patterns that trigger ClassVar warnings
"*/apps/*/admin.py" = ["RUF012"]
# Django migrations are auto-generated
"*/migrations/*.py" = ["D101", "RUF012"]
# Django models Meta classes use standard patterns
"*/apps/*/models.py" = ["RUF012", "D105"]
# Settings files use star imports by Django convention
"*/settings/*.py" = ["F405"]
# Management commands need specific signatures
"*/management/commands/*.py" = ["ARG002", "TC003", "PGH003"]
{% endif %}


# --------------------------------------------------------------------------------------------------
# Specific ruff formatting rules
[tool.ruff.format]
# Like Black, use double quotes for strings.
quote-style = "double"


# --------------------------------------------------------------------------------------------------
[tool.pytest.ini_options]
testpaths = ["tests"]
addopts = [
    "-v",
    "--strict-markers",
{% if project_type == "script" %}
    "--cov=.",
{% elif project_type == "django" %}
    "--cov={{ project_slug_underscore }}",
    "--reuse-db",
{% endif %}
    "--cov-report=html",
    "--cov-report=term-missing",
    "--cov-report=xml",
]
{% if project_type == "django" %}
DJANGO_SETTINGS_MODULE = "{{ project_slug_underscore }}.settings.local"
python_files = ["tests.py", "test_*.py", "*_tests.py"]
{% endif %}

[tool.coverage.run]
branch = true
{% if project_type == "script" %}
source = ["."]
{% elif project_type == "django" %}
source = ["{{ project_slug_underscore }}"]
{% endif %}

[tool.coverage.report]
exclude_lines = [
    "pragma: no cover",
    "def __repr__",
    "raise AssertionError",
    "raise NotImplementedError",
    "if __name__ == .__main__.:",
    "if TYPE_CHECKING:",
    "@abstractmethod",
]
