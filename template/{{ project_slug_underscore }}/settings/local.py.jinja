"""Local development settings for {{ project_name }}."""

import sys

from loguru import logger

from .base import *  # noqa: F403 - Django settings pattern

DEBUG = True

ALLOWED_HOSTS = ["localhost", "127.0.0.1", "0.0.0.0"]  # noqa: S104 - Dev environment only

# Database
# https://docs.djangoproject.com/en/5.0/ref/settings/#databases
DATABASES = {
    "default": env.db(
        "DATABASE_URL",
        default="postgresql://{{ project_slug_underscore }}_user:{{ project_slug_underscore }}_password@localhost:5432/{{ project_slug_underscore }}_db",
    )
}

# Debug toolbar (optional, add to INSTALLED_APPS if needed)
if DEBUG:
    INSTALLED_APPS += ["django_extensions"]

# Email backend for development
EMAIL_BACKEND = "django.core.mail.backends.console.EmailBackend"

# =====================================
# Loguru Configuration - Local Development
# =====================================
# Reconfigure for DEBUG level in local environment
logger.remove()
logger.add(
    sys.stderr,
    format="<green>{time:YYYY-MM-DD HH:mm:ss.SSS}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> - <level>{message}</level>",
    level="DEBUG",
    colorize=True,
)

logger.info("Local development settings loaded (DEBUG mode enabled)")
{%- endif %}
