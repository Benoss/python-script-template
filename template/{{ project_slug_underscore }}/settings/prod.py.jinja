# JSON serialized logs for Cloud Run with WARNING level
logger.remove()
logger.add(
    sys.stdout,
    serialize=True,  # JSON output for Cloud Logging
    format="{message}",
    level="WARNING",
)

logger.warning("Production environment settings loaded")
