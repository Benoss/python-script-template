{
  "version": "0.2.0",
  "configurations": [
{% if project_type == "script" %}
    {
      "name": "Python: Main Script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main_{{ project_slug_underscore }}.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    }
{% elif project_type == "django" %}
    {
      "name": "Django: Runserver",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver"],
      "django": true,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Django: Test",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["test"],
      "django": true,
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    }
{% endif %}
  ]
}
